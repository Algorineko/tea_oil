/* pages/knowledge/knowledge.wxss */
.swiper_top{
  height: 200rpx;
  background-color: rgb(243, 247, 224);
  border-bottom: rgb(196, 209, 183) 4rpx solid;
  box-shadow: 0rpx 10rpx 15px 6rpx #d8e7d8;
}
.swiper_top image{
  width: 100%;
}
.sw_item{
  height: 100%;
  text-align: center;
  line-height: 100px;
  background-color: rgb(248, 247, 189);
}
.sp_text{
  position: relative;
  z-index: 99;
  text-align: center;
  font-weight: 550;
  font-size: 35rpx;
  color: #000;
  left: 35rpx;
  bottom: 80rpx;
}
.day_head{
  text-align: center;
  line-height: 100rpx;
}
.knowledge-section {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.knowledge-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.item-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.item-icon image {
  width: 100%;
  height: 100%;
}
.item-content {
  flex: 1;
}
.item-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #666;
}
.item-source {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.section-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}
.entry-area {
  height: 160rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #f8f8f8;
}
.entry-title {
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.cm-title {
  line-height: 150rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.user-points {
  font-size: 28rpx;
  color: #666;
}