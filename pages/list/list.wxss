/* pages/list/list.wxss */
@import "/common/commom.wxss";
.mainpart{
  height: 200px;
  width: 100%;
  text-align: center;
  line-height: 100px;
  display: flex;
  justify-content: space-around;
  border: 1px solid black;
}
.mainpart view{
  height: 220px;
}
.mainpart view:nth-child(1){
  background-color: rgb(103, 238, 148);
}
.mainpart view:nth-child(2){
  background-color: rgb(213, 250, 113);
}
.mainpart view:nth-child(3){
  background-color: rgb(46, 141, 121);
}
.swiper_top{
  height: 150px;
}
.sw_item{
  height: 100%;
  text-align: center;
  line-height: 150px;
  background-color: rgb(248, 247, 189);
}
image{
  border:1px solid rgb(180, 179, 179);
  border-radius: 30%;
}
.input_part{
  background-color: rgb(215, 165, 243);
}
input{
  border:1px solid black;
  margin: 5px;
  padding: 5px;
  border-radius: 3px;
}
.gridList{
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid lightgray;
  border-left: 1rpx solid lightgray;
}
.grid_item{
  width: 33.33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid lightgray;
  border-bottom: 1rpx solid lightgray;
  box-sizing: border-box;
}
.grid_item image{
  width: 60rpx;
  height: 60rpx;
}
.grid_item text{
  font-size: 24rpx;
  margin-top: 10rpx;
}
.box{
  background-color: lightblue;
  height: 1500rpx;
}